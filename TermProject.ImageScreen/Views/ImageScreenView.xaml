<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="TermProject.ImageScreen.Views.ImageScreenView"             
             prism:ViewModelLocator.AutoWireViewModel="True" d:DesignWidth="512" d:DesignHeight="720">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="143*"/>
        </Grid.RowDefinitions>
        <Button Content="Refresh" Command="{Binding RefreshCommand}" BorderBrush="{x:Null}" BorderThickness="0" Grid.ColumnSpan="2"/>
        <Button Content="Next" Grid.Row="1" Grid.Column="1" Command="{Binding NextImageCommand}" BorderThickness="0"/>
        <Button Content="Prev" Grid.Row="1" Command="{Binding PreviousImageCommand}" BorderThickness="0"/>
        <Image Source="{Binding ImageFile}" Grid.Row="2" Grid.ColumnSpan="2"/>
    </Grid>
</UserControl>
